<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecordActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tbAddRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/tb_title"
        app:buttonGravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/lbl_add_record"
        app:titleCentered="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbAddRecord">

        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/horizontalPadding"
            android:layout_marginVertical="@dimen/verticalPadding"
            android:layout_weight="0.6"
            android:backgroundTint="@color/green2"
            android:text="@string/lbl_take_photo"
            android:textColor="@color/black"
            app:cornerRadius="@dimen/borderRadius"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconGravity="textTop"
            app:iconSize="@dimen/iconSize"
            app:iconTint="@color/black"
            app:rippleColor="@color/green3" />

        <LinearLayout
            android:id="@+id/group_retake_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/horizontalPadding"
            android:layout_marginTop="@dimen/verticalPadding"
            android:layout_marginBottom="@dimen/verticalPadding"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_saved_photo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@android:drawable/btn_star" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_retake_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/white"
                    android:text="@string/lbl_retake_photo"
                    android:textColor="@color/blue2"
                    app:cornerRadius="0dp"
                    app:rippleColor="@color/blue_light1" />

                <Button
                    android:id="@+id/btn_discard_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/white"
                    android:text="@string/lbl_discard_photo"
                    android:textColor="@color/red2"
                    app:cornerRadius="0dp"
                    app:rippleColor="@color/red1" />

            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/verticalPadding"
            android:layout_weight="0.4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalPadding"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/paragraph"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/horizontalParagraph"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/groupItemGap"
                            android:text="@string/lbl_date" />

                        <EditText
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="date" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/groupItemGap"
                            android:text="@string/lbl_time" />

                        <EditText
                            android:id="@+id/txt_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="time" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/paragraph"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/groupItemGap"
                        android:text="@string/lbl_title" />

                    <EditText
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/hint_record_title"
                        android:inputType="text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/paragraph"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/groupItemGap"
                        android:text="@string/lbl_notes" />

                    <EditText
                        android:id="@+id/txt_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/hint_record_notes"
                        android:inputType="text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/paragraph"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/groupItemGap"
                        android:text="@string/lbl_category" />

                    <Spinner
                        android:id="@+id/spinner_category"
                        style="@android:style/Widget.Material.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btnTouchSize"
                        android:layout_weight="1"
                        android:spinnerMode="dialog" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/paragraph">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/groupItemGap"
                        android:text="@string/lbl_reporter" />

                    <Spinner
                        android:id="@+id/spinner_reporter"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btnTouchSize"
                        android:layout_weight="1"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/groupItemGap"
                            android:text="@string/lbl_location" />

                        <TextView
                            android:id="@+id/lbl_location_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Location name" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/groupItemGap"
                        android:backgroundTint="@color/blue3"
                        android:text="@string/lbl_choose_location"
                        app:cornerRadius="@dimen/borderRadius"
                        app:icon="@drawable/icon_location"
                        app:iconGravity="textStart" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontalPadding"
        android:layout_marginBottom="@dimen/verticalPadding"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_discard"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btnTouchSize"
            android:layout_marginRight="@dimen/groupItemGap"
            android:layout_weight="0.3"
            android:backgroundTint="@color/white"
            android:text="@string/lbl_discard"
            android:textColor="@color/red2"
            app:cornerRadius="@dimen/borderRadius"
            app:strokeColor="@color/red2"
            app:strokeWidth="@dimen/borderWidth" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btnTouchSize"
            android:layout_weight="0.7"
            android:backgroundTint="@color/blue2"
            android:text="@string/lbl_add"
            app:cornerRadius="@dimen/borderRadius" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>