<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/frag_profile_report_content_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_height="80dp"
            android:layout_width="match_parent"
            />

        <TextView
            style="@style/frag_profile_report_tv_tittle"
            android:text="@string/lbl_add_reporter" />
        <Space
            android:layout_height="80dp"
            android:layout_width="match_parent"
            />
        <LinearLayout style="@style/frag_profile_report_table_row">

            <TextView
                style="@style/frag_profile_report_table_col1"
                android:text="@string/lbl_name" />

            <TextView
                style="@style/frag_profile_report_table_col2"
                android:hint="@string/hint_name" />

        </LinearLayout>

        <LinearLayout style="@style/frag_profile_report_table_row">

            <TextView
                style="@style/frag_profile_report_table_col1"
                android:text="@string/lbl_relationship" />

            <Spinner
                android:id="@+id/spinner_relationship"
                style="@style/frag_profile_report_table_col2" />
        </LinearLayout>

        <LinearLayout style="@style/frag_profile_report_table_row">

            <TextView
                style="@style/frag_profile_report_table_col1"
                android:text="@string/lbl_age" />

            <Spinner
                android:id="@+id/spinner_age"
                style="@style/frag_profile_report_table_col2" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_error_msg"
            style="@style/frag_profile_report_error_msg"
            android:text="@string/error_msg_name" />

        <Space
            android:layout_height="130dp"
            android:layout_width="match_parent"
            />
        <LinearLayout style="@style/frag_profile_report_btn_row">

            <Button
                style="@style/frag_profile_report_btn.delete"
                android:id="@+id/btn_delete"
                android:text="@string/btn_delete"
                />

        </LinearLayout>

        <LinearLayout style="@style/frag_profile_report_btn_row">

            <Button
                style="@style/frag_profile_report_btn.cancel"
                android:id="@+id/btn_cancel"
                android:text="@string/btn_cancel" />

            <Button
                style="@style/frag_profile_report_btn.confirm"
                android:id="@+id/btn_confirm"
                android:text="@string/btn_confirm" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>