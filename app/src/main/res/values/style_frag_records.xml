<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="frag_records_main_container">
        <!-- Size -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>

        <!-- Color -->
        <item name="android:background">@color/blue_light1</item>
    </style>

    <style name="frag_records_recycler">
        <!-- Size -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>

    </style>

    <style name="frag_records_search_bar_container">
        <!-- Size -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">0dp</item>

        <!-- Color -->
        <item name="android:background">@color/blue3</item>
    </style>


    <style name="frag_records_search_bar_edit_text">
        <!-- Size -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:layout_weight">8</item>

        <!-- Color -->
        <item name="android:background">@color/transparent</item>

        <!-- Text -->
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/lbl_search</item>
        <item name="android:textColorHint">@color/grey2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="frag_records_search_bar_search_button">
        <!-- Size -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">18dp</item>
        <item name="android:scaleType">fitCenter</item>

        <!-- Color -->
        <item name="android:backgroundTint">@color/transparent</item>

        <!-- Icon -->
        <item name="srcCompat">@drawable/icon_search</item>
        <item name="tint">@color/white</item>
        <item name="android:cropToPadding">true</item>

        <!-- Text -->

    </style>
</resources>