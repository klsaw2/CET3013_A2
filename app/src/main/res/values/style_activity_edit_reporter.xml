<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dete Row -->
    <style name="act_edit_reporter_dete_row">
        <!-- Layout -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>

        <!-- Padding/Margin -->
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/spacing_large</item>
        <item name="android:layout_marginVertical">@dimen/spacing_small</item>
    </style>

    <!-- Dete -->
    <style name="act_edit_reporter_dete">
        <!-- Layout -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>

        <!-- Padding/Margin -->
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">0dp</item>

        <!-- Font -->

    </style>

    <style name="act_edit_reporter_dete_lbl">
        <!-- Layout -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>

        <!-- Text -->
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/grey4</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="act_edit_reporter_dete_value">
        <!-- Layout -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">7</item>

        <!-- Text -->
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/grey4</item>
        <item name="android:textColorHint">@color/grey3</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <!-- Main Button Group -->
    <style name="act_edit_reporter_main_btn_group">
        <!-- Layout -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:orientation">horizontal</item>

        <!-- Padding/Margin -->
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/spacing_large</item>
        <item name="android:layout_marginVertical">@dimen/spacing_large</item>
    </style>

    <style name="act_edit_reporter_main_btn">
        <!-- Layout -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>

        <!-- Button Settings -->
        <item name="cornerRadius">@dimen/borderRadius_medium</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="act_edit_reporter_main_btn.cancel" parent="act_edit_reporter_main_btn">
        <item name="android:layout_weight">4</item>
        <!-- Button Settings -->
        <item name="backgroundTint">@color/red1</item>
        <item name="android:text">@string/btn_retake_photo</item>
        <item name="android:textColor">@color/red3</item>
        <item name="rippleColor">@color/blue_light3</item>
    </style>

    <style name="act_edit_reporter_main_btn.confirm" parent="act_edit_reporter_main_btn">
        <item name="android:layout_weight">7</item>
        <!-- Button Settings -->
        <item name="backgroundTint">@color/green3</item>
        <item name="android:text">@string/btn_retake_photo</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/blue_light3</item>
    </style>

    <style name="act_edit_reporter_main_btn_delete">
        <!-- Layout -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginHorizontal">@dimen/spacing_large</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>

        <!-- Button Settings -->
        <item name="cornerRadius">@dimen/borderRadius_medium</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_medium</item>

        <!-- Button Settings -->
        <item name="backgroundTint">@color/red3</item>
        <item name="android:text">@string/btn_retake_photo</item>
        <item name="android:textColor">@color/red1</item>
        <item name="rippleColor">@color/blue_light3</item>
    </style>
</resources>
