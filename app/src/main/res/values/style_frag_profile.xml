<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="frag_profile_main_container">
        <!-- Size -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>


        <!-- Font -->
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="frag_profile_recycler_container">
        <!-- Size -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">9</item>

    </style>

    <style name="frag_profile_float_add_btn">
        <!-- Size -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">9</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:padding">0dp</item>

        <!-- Color -->
        <item name="android:backgroundTint">@color/blue3</item>

        <!-- Icon -->
        <!--        <item name="android:src">@drawable/icon_add</item>-->
        <item name="srcCompat">@drawable/icon_add</item>

        <item name="tint">@color/white</item>
        <!--        <item name="icon">@drawable/icon_add</item>-->
    </style>

</resources>