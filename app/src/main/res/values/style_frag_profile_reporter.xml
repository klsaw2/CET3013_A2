<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="frag_profile_report_content_container">
        <!-- Size -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>

        <!-- Color -->
        <item name="android:background">@color/grey1</item>
    </style>


    <style name="frag_profile_report_tv_tittle">
        <!-- Size -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">25dp</item>
        <item name="android:background">@color/blue1</item>

        <!-- Font -->
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/blue3</item>
        <item name="android:textSize">32sp</item>

        <!-- Text -->
        <item name="android:textAlignment">center</item>
    </style>

    <style name="frag_profile_report_table_row">
        <!-- Size -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
<item name="android:paddingVertical">10dp</item>

    </style>

    <style name="frag_profile_report_table_col1">
        <!-- Size -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingEnd">50dp</item>

        <!-- Font -->
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/grey4</item>
        <item name="android:textSize">24sp</item>

        <!-- Text -->
        <item name="android:textAlignment">textEnd</item>

    </style>

    <style name="frag_profile_report_table_col2">
        <!-- Size -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>

        <item name="android:layout_marginEnd">20dp</item>

        <!-- Font -->
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/grey3</item>
        <item name="android:textSize">20sp</item>
        <!-- Text -->
        <item name="android:textAlignment">textStart</item>
    </style>
    <!-- ===================== Error Message ===================== -->
    <style name="frag_profile_report_error_msg">
        <!-- Size -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">15dp</item>

        <!-- Font -->
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/red2</item>
        <item name="android:textSize">16sp</item>

        <!-- Text -->
        <item name="android:textAlignment">center</item>
    </style>

    <!-- ===================== Buttons ===================== -->
    <style name="frag_profile_report_btn_row">
        <!-- Size -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:gravity">center</item>

        <!-- Font -->
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>

        <!-- Text -->
        <item name="android:textAlignment">center</item>
    </style>

    <style name="frag_profile_report_btn">
        <!-- Size -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:paddingHorizontal">70dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>


        <!-- Font -->
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>

        <!-- Text -->
        <item name="android:textAlignment">center</item>
    </style>

    <style name="frag_profile_report_btn.cancel" parent="frag_profile_report_btn">
        <!-- Color -->
        <item name="android:backgroundTint">@color/grey2</item>
        <!-- Font -->
        <item name="android:textColor">@color/grey4</item>
    </style>

    <style name="frag_profile_report_btn.confirm" parent="frag_profile_report_btn">
        <!-- Color -->
        <item name="android:backgroundTint">@color/green2</item>
        <!-- Font -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="frag_profile_report_btn.delete" parent="frag_profile_report_btn">
        <!-- Size -->
        <item name="android:paddingVertical">5dp</item>
        <item name="android:layout_marginHorizontal">120dp</item>
        <!-- Color -->
        <item name="android:backgroundTint">@color/red1</item>
        <!-- Font -->
        <item name="android:textColor">@color/red3</item>
    </style>


</resources>